{
  "name": "@metamodern/static",
  "version": "0.0.0",
  "description": "Build a next-gen static site with pre-rendered markup and bundled/minified assets",
  "author": "Daniel C. Narey <os@metamodern.design>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/metamodern-design/static"
  },
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "bin": {
    "metamodern-static": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "del dist/*",
    "build": "rollup -c",
    "cli": "chmod +x dist/cli.js && dist/cli.js",
    "lint": "eslint --fix *.js src",
    "release": "np",
    "sync": "git pull && git add . && git commit -m 'automated sync' && git push",
    "test": "npm run lint && npm run build && ava",
    "update": "updtr"
  },
  "dependencies": {
    "@arr/reduce": "^1.0.1",
    "@iarna/toml": "^2.2.3",
    "@metamodern/design-system": "^0.1.0",
    "camelcase": "^5.3.1",
    "cpy": "^7.3.0",
    "cssnano": "^4.1.10",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1",
    "html-minifier": "^4.0.0",
    "markdown-it": "^10.0.0",
    "postcss": "^7.0.23",
    "postcss-easy-import": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "pug": "^2.0.4",
    "rollup": "^1.27.5",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "sugarss": "^2.0.0",
    "tailwindcss": "^1.1.4",
    "yaml": "^1.7.2"
  },
  "devDependencies": {
    "ava": "^2.3.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-ava": "^9.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-types": "^1.0.2",
    "esm": "^3.2.25",
    "np": "^5.0.3",
    "rollup-plugin-preserve-shebangs": "^0.1.2",
    "updtr": "^3.1.0"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "static site generator",
    "static",
    "site",
    "generator",
    "rollup",
    "pug",
    "build",
    "system"
  ],
  "ava": {
    "require": [
      "esm"
    ]
  }
}
